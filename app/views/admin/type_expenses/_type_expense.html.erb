<div id="<%= dom_id type_expense %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= type_expense.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this type expense", type_expense, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this type expense", edit_admin_type_expense_path(type_expense), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
